<head>
    <title>Waiter App</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="shortcut icon" href="/images/food.jpg">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body style="color:black">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="jumbotron">
                    <h4 style="color:white">{{msg}}</h4>
                    <h5 style="color:white">Please select days you can work on.</h5>
                    <form action="" method="post">
                        <table class="table table-striped table-hover ">
                            <thead>
                                <tr class="">
                                    <th>Select</th>
                                    <th>Days of the week</th>
                                    <th>Progress</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="">
                                    <td class="">
                                        <input type="checkbox" name="days" value="sunday" {{#if myDays.sunday}} checked {{/if}} {{sun}}>
                                    </td>
                                    <td>Sunday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{sunBar}}%">{{sunAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="monday" {{#if myDays.monday}} checked {{/if}} {{mon}}>
                                    </td>
                                    <td>Monday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{monBar}}%">{{monAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="tuesday" {{#if myDays.tuesday}} checked {{/if}} {{tue}}>
                                    </td>
                                    <td>Tuesday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{tueBar}}%">{{tueAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="wednesday" {{#if myDays.wednesday}} checked {{/if}} {{wed}}>
                                    </td>
                                    <td>Wednesday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{wedBar}}%">{{wedAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="thursday" {{#if myDays.thursday}} checked {{/if}} {{thur}}>
                                    </td>
                                    <td>Thursday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{thurBar}}%">{{thurAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="friday" {{#if myDays.friday}} checked {{/if}} {{fri}}>
                                    </td>
                                    <td>Friday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{friBar}}%">{{friAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="saturday" {{#if myDays.saturday}} checked {{/if}} {{sat}}>
                                    </td>
                                    <td>Saturday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{satBar}}%">{{satAvil}} booked.</div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-info" href="/logout">Logout</a>
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>
