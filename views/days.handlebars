<head>
    <title>Admin Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap_2.min.css">
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond|Crimson+Text" rel="stylesheet">
    <link rel="shortcut icon" href="/css/food.jpg">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body style="font-family: 'Cormorant Garamond', serif;">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li class="active"><a href="/reset">Delete</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">

        <div class="row">
            <div class="row">
                <div class=""></div>
                <div class="col-md-8 col-sm-8">
                    <span class="label label-default">UnderBooked</span>
                    <span class="label label-success">Enough Waiters</span>
                    <span class="label label-primary">Over subscribed</span>
                </div>
            </div>
            <hr>

        </div>
        <h4 align="center"><u>Waiter Schedule.</u></h4>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <tr>
                    {{#each data}}
                        <th class="field-label col-xs-1 {{status}}"><h4 style="color:white;">{{day}}</h4><br>
                            {{#each names}}
                                <h5 style="font-family:times;color:white">{{this}}</h5>
                                {{else}}
                                    <div>
                                        <h5 style="color: aquamarine;">Sorry, day not selected yet. </h5>
                                    </div>
                            {{/each}}
                        </th>
                    {{/each}}
                </tr>

            </table>

        </div>
    </div>
</body>
