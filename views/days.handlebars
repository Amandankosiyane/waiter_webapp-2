<head>
    <title>Admin Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond|Crimson+Text" rel="stylesheet">
    <link rel="shortcut icon" href="/css/food.jpg">
</head>

<body style="font-family: 'Cormorant Garamond', serif;">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li class="active"><a href="/reset">Delete</a></li>
                <li class="active"><a href="#">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="container" style="color: white">
        <h2 align="center" style="font-family: 'Cormorant Garamond', serif; color: white;"><u>Waiter Schedule.</u></h2>

        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-body">
                        <p>UnderBooked</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-warning">
                    <div class="panel-body">
                        <p>Enough Waiters</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-danger">
                    <div class="panel-body">
                        <p>Over subscribed</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover ">
                <tr>
                    {{#each data}}
                        <th class="{{status}}"><u>{{day}}</u><br>
                            {{#each names}}
                                <p>{{this}}</p>
                            {{/each}}
                        </th>
                    {{/each}}
                </tr>

            </table>

        </div>
    </div>
</body>
